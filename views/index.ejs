        <!---------------- Contact ---------------->
        <section id="contact" class="py-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xs-12 col-md-7">
                        <span></span>
                        <form action="/" id="form" class="p-2 px-md-6">
                            <div class="form-control">
                                <input type="text" name="name" id="username" placeholder="Your Name">
                                <div class="error"></div>
                            </div>
                            <div class="form-control">
                                <input type="text" name="email" id="email" placeholder="Your Email">
                                <div class="error"></div>
                            </div>
                            <div class="form-control">
                                <textarea name="msg" id="message" cols="30" rows="10" placeholder="Your Message"></textarea><br>
                                <div class="error"></div>
                            </div>
                            <button class="btn main-outline-btn px-2 py-1">Submit</button>
                        </form>  
                        <span></span>
                    </div>
                </div>
